<script>
    $(document).ready(function () {
        $('.select2').select2();
        $("#periksa").datepicker({
            startDate: "dateToday",
            format: "yyyy-mm-dd",
            autoclose: true
        });
        function embuh(){
            var cb = $('select[name="cara_bayar"]').val();
            if(cb != 1){
                $('#noRuj').hide();
            }else{
                $('#noRuj').show();
            }
        }
        $('input[name="no_rm"]').keyup(function(){
            var no_rm = $(this).val();
            if(no_rm.length > 6){
                $.get("cek-pasien/"+no_rm, function(resp){
                    $('input[name="tgllahir"]').val(resp[0]['tgllahir']);
                    $('input[name="nama"]').val(resp[0]['nama']);
                    $('input[name="alamat"]').val(resp[0]['alamat']);
                    $('input[name="kelamin"]').val((resp[0]['kelamin'] == 'L') ? 'Laki-laki' : 'Perempuan');
                })
            }
        })
    })
</script>
